@model PromoCard

<sc-link asp-for="Link" editable="false" class="column promo-column">
    <div class="card">
        <div class="card-image">
            <figure style="background-image: url(@Model?.Image?.Value?.Src)" />
        </div>
        <div class="card-content">
            <div class="content">
                <h4 asp-for="Headline" />
                <sc-text asp-for="Text" />
            </div>
        </div>
    </div>
</sc-link>
